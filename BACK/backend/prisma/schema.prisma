generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  name        String
  password    String
  publicKey   String
  files       File[]
}

model File {
  id          Int      @id @default(autoincrement())
  name        String
  content     Bytes
  hash        String
  signature   String?
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
}//
